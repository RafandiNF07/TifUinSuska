---
// src/components/common/PageHero.astro
import Breadcrumbs from "./Breadcrumbs.astro";

interface Props {
  title: string;
  description?: string;
  bgImage?: string;
}

const { title, description, bgImage = "" } = Astro.props;
---

<section
  class="relative pt-28 pb-8 md:pt-36 md:pb-10 overflow-hidden bg-slate-900"
>
  <div class="absolute inset-0 z-0">
    <img
      src={bgImage}
      alt="Background Header"
      class="w-full h-full object-cover opacity-20 grayscale"
    />
    <div
      class="absolute inset-0 bg-linear-to-b from-slate-950/90 via-slate-950/80 to-slate-950"
    >
    </div>
  </div>

  <div class="container mx-auto px-6 relative z-10 text-center">
    <div class="flex justify-center">
      <Breadcrumbs title={title} />
    </div>

    <h1
      class="text-3xl md:text-4xl font-bold text-white mb-2 leading-tight font-sans animate-fade-in-up"
    >
      {title}
    </h1>

    {
      description && (
        <p
          class="text-slate-400 text-base md:text-lg max-w-4xl mx-auto leading-relaxed animate-fade-in-up"
          style="animation-delay: 0.1s;"
        >
          {description}
        </p>
      )
    }
  </div>
</section>
