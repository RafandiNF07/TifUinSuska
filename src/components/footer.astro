---
// FILE: components/footer.astro (atau Layout.astro)
import logoImage from "../assets/logo.png";

// Definisi Warna Hover agar konsisten
const PRIMARY_COLOR_HOVER = "hover:text-blue-400"; // Menggunakan hijau muda agar menonjol di background gelap
const DARK_BG = "bg-slate-900";
const TEXT_LIGHT = "text-gray-300";
const TEXT_ACCENT = "text-blue-400";
// Font Poppins
const FONT_CLASS = "font-poppins";

// info kontak
const contactInfo = {
  address:
    "Jurusan Teknik Informatika, Gedung FST UIN Suska Riau. Jl. HR. Soebrantas No.155 KM 18, Simpang Baru Panam, Pekanbaru 28293",
  email: "tif@uin-suska.ac.id",
};

const beritaTerbaru = [
  { text: "Penerimaan Mahasiswa Baru Jalur SMMPTN-Barat 2025", href: "#" },
  { text: "Perpanjangan Waktu Pembayaran UKT Mahasiswa Baru", href: "#" },
  {
    text: "Teknik Informatika UIN Suska Riau Raih Akreditasi Unggul",
    href: "#",
  },
];
const quickLinks = [
  { text: "Agenda", href: "#" },
  { text: "Prestasi", href: "#" },
  { text: "Berita", href: "#" },
  { text: "Beasiswa", href: "#" },
  { text: "SIREG", href: "#" },
  { text: "iRaise", href: "#" },
  { text: "Elearning", href: "#" },
];
---

<footer class={`${DARK_BG} ${TEXT_LIGHT} py-12 md:py-16 ${FONT_CLASS}`}>
  <div class="max-w-7xl mx-auto px-6 flex flex-col gap-10">
    <div
      class="flex justify-center items-center gap-6 pb-6 border-b border-gray-700/50"
    >
      <!-- ig -->
      <a
        href="#"
        aria-label="Instagram"
        class="text-gray-400 hover:text-white transition duration-300 transform hover:scale-110"
      >
        <svg width="28" height="28" fill="currentColor" viewBox="0 0 24 24"
          ><path
            d="M7 2C4.24 2 2 4.24 2 7v10c0 2.76 2.24 5 5 5h10c2.76 0 5-2.24 5-5V7c0-2.76-2.24-5-5-5H7zm10 2c1.66 0 3 1.34 3 3v10c0 1.66-1.34 3-3 3H7c-1.66 0-3-1.34-3-3V7c0-1.66 1.34-3 3-3h10zm-5 3.5A4.5 4.5 0 1 0 16.5 12 4.5 4.5 0 0 0 12 7.5zm0 2A2.5 2.5 0 1 1 9.5 12 2.5 2.5 0 0 1 12 9.5zM17.25 6A1.25 1.25 0 1 0 18.5 7.25 1.25 1.25 0 0 0 17.25 6z"
          ></path></svg
        >
      </a>
      <!-- yt -->
      <a
        href="#"
        aria-label="YouTube"
        class="text-gray-400 hover:text-white transition duration-300 transform hover:scale-110"
      >
        <svg width="28" height="28" fill="currentColor" viewBox="0 0 24 24"
          ><path
            d="M19.6 3.2H4.4A4.4 4.4 0 0 0 0 7.6v8.8a4.4 4.4 0 0 0 4.4 4.4h15.2a4.4 4.4 0 0 0 4.4-4.4V7.6a4.4 4.4 0 0 0-4.4-4.4zM9.6 15.2V8.8l6.4 3.2-6.4 3.2z"
          ></path></svg
        >
      </a>
      <!-- twitter -->
      <a
        href="#"
        aria-label="Twitter"
        class="text-gray-400 hover:text-white transition duration-300 transform hover:scale-110"
      >
        <svg width="28" height="28" fill="currentColor" viewBox="0 0 24 24"
          ><path
            d="M22 5.92a8.27 8.27 0 0 1-2.36.65A4.12 4.12 0 0 0 21.4 4a8.19 8.19 0 0 1-2.6 1A4.11 4.11 0 0 0 12 8.1a11.65 11.65 0 0 1-8.46-4.3 4.11 4.11 0 0 0 1.27 5.48A4 4 0 0 1 3 8.4v.05a4.11 4.11 0 0 0 3.29 4 4.14 4.14 0 0 1-1.85.07 4.11 4.11 0 0 0 3.83 2.85 8.25 8.25 0 0 1-5.1 1.76A8.5 8.5 0 0 1 2 17.1a11.62 11.62 0 0 0 6.29 1.84c7.55 0 11.68-6.26 11.68-11.68 0-.18 0-.35-.01-.53A8.18 8.18 0 0 0 22 5.92z"
          ></path></svg
        >
      </a>
      <!-- fb -->
      <a
        href="#"
        aria-label="Facebook"
        class="text-gray-400 hover:text-white transition duration-300 transform hover:scale-110"
      >
        <svg width="28" height="28" fill="currentColor" viewBox="0 0 24 24"
          ><path
            d="M22 12a10 10 0 10-11.5 9.9v-7h-2v-3h2v-2c0-2 1.2-3.1 3-3.1.9 0 1.9.1 2.9.3v2h-1.6c-1.3 0-1.7.8-1.7 1.6v1.8h3l-.5 3h-2.5v7A10 10 0 0022 12z"
          ></path></svg
        >
      </a>
    </div>

    <!-- logo uin -->
    <div
      class="flex items-center justify-center py-6 border-b border-gray-700/50"
    >
      <div class="flex items-center gap-3">
        <img
          src={logoImage.src}
          alt="Logo UIN Suska Riau"
          class="h-10 w-auto"
        />
        <div class="text-left">
          <h4 class="text-lg font-semibold text-white whitespace-nowrap">
            UIN Sultan Syarif Kasim Riau
          </h4>
          <h4 class={`text-xl font-bold ${TEXT_ACCENT}`}>Teknik Informatika</h4>
        </div>
      </div>
    </div>

    <!-- 3 kolom dibawah logo -->
    <div
      class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12 text-sm pt-4"
    >
      <!-- kolom 1 -->
      <div>
        <h3 class="text-base font-bold mb-4 text-white">Hubungi Kami</h3>

        <div
          class="flex items-start text-xs leading-relaxed mb-3 text-gray-400"
        >
          <svg
            class={`w-4 h-4 mr-2 mt-1 shrink-0 ${TEXT_ACCENT}`}
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5a2.5 2.5 0 110-5 2.5 2.5 0 010 5z"
            ></path>
          </svg>
          <p>{contactInfo.address}</p>
        </div>

        <div class="flex items-center text-xs text-gray-400">
          <svg
            class={`w-4 h-4 mr-2 shrink-0 ${TEXT_ACCENT}`}
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M20 4H4a2 2 0 00-2 2v12a2 2 0 002 2h16a2 2 0 002-2V6a2 2 0 00-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"
            ></path>
          </svg>
          <a
            href={`mailto:${contactInfo.email}`}
            class={`${PRIMARY_COLOR_HOVER} hover:text-white`}
          >
            {contactInfo.email}
          </a>
        </div>
      </div>

      <!-- kolom 2 -->
      <div>
        <h3 class="text-base font-bold mb-4 text-white">Visi Keilmuan</h3>
        <p class="text-xs leading-relaxed text-gray-400">
          Menjadi Program Studi Teknik Informatika yang <b>unggul</b> dalam bidang
          <b>Data Analytics</b> dan <b>Software Development</b> yang mengintegrasikan
          Informatika dan Islam di Indonesia pada tahun 2025.
        </p>
      </div>
      <!-- kolom 3 -->
      <div>
        <h3 class="text-base font-bold mb-4 text-white">Berita Terbaru</h3>
        <ul class="space-y-3 text-xs text-gray-400">
          {
            beritaTerbaru.map((item) => (
              <li>
                <a href={item.href} class={PRIMARY_COLOR_HOVER}>
                  {item.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
    <!-- Quick Link -->
    <div class="md:col-span-1 justify-center text-center">
      <h3 class="text-base font-bold mb-4 text-white">Quick Link</h3>
      <div class="flex flex-wrap gap-2 text-xs justify-center text-gray-400">
        {
          quickLinks.map((item, idx) => (
            <>
              <a href={item.href} class={`${PRIMARY_COLOR_HOVER}`}>
                {item.text}
              </a>
              {idx < quickLinks.length - 1 && <span>|</span>}
            </>
          ))
        }
      </div>
    </div>
  </div>
</footer>
