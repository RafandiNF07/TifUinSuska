---
interface Props {
  title: string;
  paragraphs: string[];
}

const { title, paragraphs } = Astro.props;
---

<div
  class="prose prose-lg prose-invert max-w-none text-slate-300 animate-fade-in-up"
>
  <h3 class="text-2xl font-bold text-white mb-4">{title}</h3>

  {paragraphs.map((text) => <p>{text}</p>)}
</div>
