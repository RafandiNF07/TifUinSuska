---
// src/components/home/Stats.astro
import { statsData } from "../../data/home";
---

<section id="stats" class="relative -mt-14 z-30 pb-4">
  <div class="container mx-auto px-6 relative">
    <div
      class="bg-slate-900/80 backdrop-blur-md border border-slate-800/50 rounded-2xl overflow-hidden shadow-2xl border-t"
    >
      <div
        class="px-6 py-4 border-b border-slate-800/50 flex flex-col md:flex-row justify-between items-center bg-slate-900/50 gap-2"
      >
        <h3
          class="text-sm font-bold text-white uppercase tracking-widest flex items-center gap-2"
        >
          <span class="w-2 h-2 bg-emerald-500 rounded-full animate-pulse"
          ></span>
          Statistik Akademik
        </h3>
        <span class="text-xs text-slate-500 font-mono"> 2025 </span>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 divide-x divide-slate-800/50">
        {
          statsData.map((stat) => (
            <div class="p-6 text-center group hover:bg-slate-800/50 transition duration-300">
              <div class="text-3xl md:text-4xl font-bold text-white mb-2 group-hover:text-emerald-400 transition-colors">
                {stat.value}
              </div>
              <div class="text-xs md:text-sm text-slate-300 font-medium uppercase tracking-wider group-hover:text-white transition-colors">
                {stat.label}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
