---
// src/components/home/Hero.astro
import { heroData } from "../../data/home";
import heroBg from "@/assets/images/dosen.jpg";
---

<section
  class="relative h-svh w-full flex flex-col justify-start items-center overflow-hidden z-10 pt-32 md:pt-20"
>
  <div class="absolute inset-0 z-0">
    <img
      src={heroBg.src}
      alt="Dosen Teknik Informatika UIN Suska Riau"
      class="w-full h-full object-cover object-center"
    />

    <div
      class="absolute inset-0 bg-linear-to-b from-slate-950/95 via-slate-900/50 to-transparent"
    >
    </div>

    <div
      class="absolute bottom-0 left-0 right-0 h-32 bg-linear-to-t from-slate-950 via-slate-950/80 to-transparent z-20 pointer-events-none"
    >
    </div>
  </div>

  <div class="relative z-20 container mx-auto px-6 text-center">
    <div class="animate-fade-in-up">
      <span
        class="text-emerald-400 font-bold tracking-[0.2em] text-[10px] md:text-xs uppercase border-b border-emerald-500/30 pb-1"
      >
        Program Studi Sarjana (S1)
      </span>
    </div>

    <div
      class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-emerald-500/10 border border-emerald-500/20 backdrop-blur-sm animate-fade-in-up mx-auto mb-2"
      style="animation-delay: 0.1s;"
    >
      <span class="relative flex h-1.5 w-1.5">
        <span
          class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"
        ></span>
        <span
          class="relative inline-flex rounded-full h-1.5 w-1.5 bg-emerald-500"
        ></span>
      </span>
      <span
        class="text-emerald-300 text-[10px] font-bold tracking-widest uppercase"
      >
        Terakreditasi Unggul <span class="text-slate-500 mx-1">|</span> LAM INFOKOM
      </span>
    </div>

    <h1
      class="text-4xl md:text-5xl lg:text-6xl font-bold text-white tracking-tight leading-tight mb-2 max-w-6xl mx-auto font-sans animate-fade-in-up drop-shadow-lg"
      style="animation-delay: 0.2s;"
    >
      Membangun Peradaban Digital <span
        class="text-transparent bg-clip-text bg-linear-to-r from-emerald-400 to-cyan-400"
        >Rabbani</span
      >
    </h1>

    <p
      class="text-slate-100 text-sm md:text-base max-w-4xl mx-auto mb-40 leading-relaxed animate-fade-in-up drop-shadow-md font-medium"
      style="animation-delay: 0.3s;"
    >
      {heroData.description}
    </p>

    <div
      class="flex flex-col sm:flex-row gap-4 justify-center items-center animate-fade-in-up mt-1"
      style="animation-delay: 0.4s;"
    >
      <a
        href="/pendaftaran"
        class="px-8 py-3 rounded-full bg-emerald-600 hover:bg-emerald-500 text-white font-bold shadow-lg shadow-emerald-900/50 hover:-translate-y-1 transition-all text-sm w-full sm:w-auto"
      >
        {heroData.secondaryCta}
      </a>
      <a
        href="/profil"
        class="px-8 py-3 rounded-full border border-slate-300 hover:border-white text-slate-100 hover:text-white font-semibold hover:bg-white/10 transition-all text-sm w-full sm:w-auto backdrop-blur-sm"
      >
        {heroData.primaryCta}
      </a>
    </div>
  </div>
</section>
