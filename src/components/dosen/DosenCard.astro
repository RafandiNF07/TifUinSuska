---
// src/components/dosen/DosenCard.astro
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  item: CollectionEntry<"dosen">;
}

const { item } = Astro.props;
const { name, nip, jabatan, email, foto, pendidikan = [] } = item.data;
---

<div
  class="group bg-slate-900 border border-slate-800 rounded-xl p-6 flex flex-col items-center text-center hover:border-emerald-500/50 transition-all duration-300 hover:shadow-lg hover:shadow-emerald-900/20 h-full"
>
  <div class="relative w-24 h-24 mb-4 shrink-0">
    <div
      class="absolute inset-0 bg-emerald-500 rounded-full blur-lg opacity-20 group-hover:opacity-40 transition-opacity"
    >
    </div>
    <Image
      src={foto}
      alt={name}
      class="relative w-full h-full object-cover rounded-full border-2 border-slate-700 group-hover:border-emerald-500 transition-colors"
      width={150}
      height={150}
    />
  </div>

  <h3
    class="text-white font-bold text-lg leading-tight mb-1 group-hover:text-emerald-400 transition-colors"
  >
    {name}
  </h3>

  <span
    class="text-emerald-500 text-xs font-bold uppercase tracking-wider mb-2"
  >
    {jabatan}
  </span>

  <p
    class="text-slate-500 text-xs font-mono bg-slate-800 px-2 py-1 rounded mb-4"
  >
    NIP: {nip}
  </p>

  {
    /* Cek apakah pendidikan ada isinya (length > 0) */
    pendidikan && pendidikan.length > 0 ? (
      <div class="w-full border-t border-slate-800 pt-3 mb-4 mt-auto">
        <p class="text-[10px] text-slate-500 font-bold uppercase tracking-wider mb-2">
          Riwayat Pendidikan
        </p>
        <ul class="space-y-1">
          {pendidikan.map((edu) => (
            <li class="text-xs text-slate-300 flex items-start justify-center gap-1.5">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-3.5 w-3.5 text-emerald-500 shrink-0 mt-0.5"
                viewBox="0 0 20 20"
                fill="currentColor"
              >
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z" />
              </svg>
              <span class="text-left line-clamp-1" title={edu}>
                {edu}
              </span>
            </li>
          ))}
        </ul>
      </div>
    ) : (
      /* Jika kosong, beri jarak saja */
      <div class="mt-auto mb-4" />
    )
  }

  <a
    href={`mailto:${email}`}
    class="text-slate-400 text-sm hover:text-white flex items-center gap-2 transition-colors pt-3 border-t border-slate-800 w-full justify-center"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="h-4 w-4"
      viewBox="0 0 20 20"
      fill="currentColor"
    >
      <path
        d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"
      ></path>
      <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
    </svg>
    Email Dosen
  </a>
</div>
