---
import logoImage from "../assets/logo.png";
---
// Navbar TIF UIN Suska
<nav class="w-full bg-white shadow-sm fixed top-0 left-0 z-50">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-4 py-3">
    
    <!-- Logo -->
    <a href="/beranda" class="flex items-center gap-2">
      <img src={logoImage.src} alt="Logo TIF" class="w-10 h-10" />
      <span class="text-lg font-semibold">Teknik Informatika</span>
    </a>

    <!-- Menu Desktop -->
    <ul class="hidden md:flex gap-6 font-medium text-gray-700">
      <li><a href="/beranda" class="hover:text-blue-600">Beranda</a></li>

      <li class="group relative cursor-pointer">
        <span class="hover:text-blue-600">Profil ▾</span>
        <div class="absolute hidden group-hover:block bg-white shadow-md rounded p-3 w-40">
          <a href="/profil" class="block py-1 hover:text-blue-600">Profil</a>
          <a href="/about" class="block py-1 hover:text-blue-600">Tentang TIF</a>
        </div>
      </li>

      <li class="group relative cursor-pointer">
        <span class="hover:text-blue-600">Akademik ▾</span>
        <div class="absolute hidden group-hover:block bg-white shadow-md rounded p-3 w-40">
          <a href="/akademik" class="block py-1 hover:text-blue-600">Informasi Akademik</a>
        </div>
      </li>

      <li><a href="/penelitian" class="hover:text-blue-600">Penelitian</a></li>
      <li><a href="/berita" class="hover:text-blue-600">Berita</a></li>
      <li><a href="/agenda" class="hover:text-blue-600">Agenda</a></li>
      <li><a href="/alumni" class="hover:text-blue-600">Alumni</a></li>
    </ul>
  </div>
</nav>
