---
// src/pages/profil/fasilitas.astro
import MainLayout from "@/layouts/MainLayout.astro";
import PageHero from "@/components/common/PageHero.astro";

// --- DATA LABORATORIUM ---
// Kita hardcode data di sini agar mudah diedit tanpa perlu buat file JSON terpisah dulu.
const labs = [
  {
    name: "Lab. Rekayasa Perangkat Lunak (RPL)",
    deskripsi:
      "Pusat pengembangan software, mobile apps (Android/iOS), dan teknologi web modern.",
    image:
      "https://images.unsplash.com/photo-1504384308090-c54be3852f33?q=80&w=1000&auto=format&fit=crop",
    kapasitas: "30 Workstation",
    specs: [
      "Intel Core i7 Gen 12",
      "RAM 32GB DDR4",
      "NVMe SSD 1TB",
      "Dual Monitor 24 inch",
    ],
    software: ["Android Studio", "VS Code", "Docker", "Flutter SDK"],
  },
  {
    name: "Lab. Multimedia & Kecerdasan Buatan",
    deskripsi:
      "Dikhususkan untuk rendering grafis berat, video editing, dan training model Deep Learning.",
    image:
      "https://images.unsplash.com/photo-1542744173-8e7e53415bb0?q=80&w=1000&auto=format&fit=crop",
    kapasitas: "25 Workstation",
    specs: [
      "AMD Ryzen 9 5900X",
      "RAM 64GB DDR4",
      "NVIDIA RTX 3080 10GB",
      "Monitor 4K IPS",
    ],
    software: ["Blender 3D", "Adobe CC", "TensorFlow", "Unity Engine"],
  },
  {
    name: "Lab. Jaringan & Keamanan Siber",
    deskripsi:
      "Fasilitas praktikum infrastruktur jaringan, administrasi server, dan simulasi cybersecurity.",
    image:
      "https://images.unsplash.com/photo-1558494949-ef526b0042a0?q=80&w=1000&auto=format&fit=crop",
    kapasitas: "30 Workstation",
    specs: [
      "Intel Core i5 Gen 11",
      "RAM 16GB",
      "Cisco Router & Switch",
      "Mikrotik RB Series",
    ],
    software: ["Cisco Packet Tracer", "Wireshark", "GNS3", "Kali Linux"],
  },
];

// --- DATA FASILITAS UMUM ---
const facilities = [
  {
    name: "Ruang Kelas Multimedia",
    icon: "M",
    desc: "Kelas teori nyaman dengan Smart TV 65 inch, AC sentral, dan proyektor interaktif.",
  },
  {
    name: "Co-Working Space",
    icon: "C",
    desc: "Area diskusi terbuka bagi mahasiswa dengan akses Wi-Fi 6 (High Speed) gratis.",
  },
  {
    name: "Perpustakaan Digital",
    icon: "P",
    desc: "Akses ke ribuan jurnal IEEE, skripsi, dan e-book pemrograman terbaru.",
  },
  {
    name: "Musholla & Kantin",
    icon: "I",
    desc: "Fasilitas ibadah dan area istirahat yang bersih di dalam gedung fakultas.",
  },
];
---

<MainLayout
  title="Fasilitas & Laboratorium"
  description="Sarana prasarana pendukung kegiatan akademik dan riset Teknik Informatika UIN Suska Riau."
  isContentPage={true}
>
  <PageHero
    title="Fasilitas & Infrastruktur"
    description="Ekosistem teknologi modern yang dirancang untuk menunjang riset dan inovasi digital."
    bgImage="https://images.unsplash.com/photo-1519389950473-47ba0277781c?q=80&w=2070&auto=format&fit=crop"
  />

  <section class="py-16 md:py-24">
    <div class="container mx-auto px-6">
      <div
        class="flex flex-col md:flex-row justify-between items-end mb-12 gap-4"
      >
        <div>
          <h2
            class="text-emerald-500 font-bold tracking-widest text-sm uppercase mb-2"
          >
            Laboratorium Komputer
          </h2>
          <h3 class="text-3xl md:text-4xl font-bold text-white">
            Dapur Pacu Mahasiswa
          </h3>
        </div>
        <p
          class="text-slate-400 max-w-md text-right md:text-left text-sm leading-relaxed"
        >
          Kami menyediakan perangkat keras terkini (High Performance Computing)
          untuk memastikan mahasiswa dapat menjalankan software industri tanpa
          hambatan.
        </p>
      </div>

      <div class="grid gap-8 lg:grid-cols-3">
        {
          labs.map((lab) => (
            <div class="group bg-slate-900 border border-slate-800 rounded-2xl overflow-hidden hover:border-emerald-500/50 transition-all duration-300 hover:shadow-xl hover:shadow-emerald-900/10 flex flex-col h-full">
              <div class="relative h-52 overflow-hidden">
                <div class="absolute inset-0 bg-slate-900/10 group-hover:bg-transparent transition-colors z-10" />
                <img
                  src={lab.image}
                  alt={lab.name}
                  class="w-full h-full object-cover transform group-hover:scale-110 transition duration-700"
                />
                <div class="absolute bottom-4 right-4 z-20 bg-slate-950/90 backdrop-blur px-3 py-1 rounded-full border border-slate-700 shadow-lg">
                  <span class="text-xs text-emerald-400 font-mono font-bold flex items-center gap-2">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-3 w-3"
                      viewBox="0 0 20 20"
                      fill="currentColor"
                    >
                      <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
                    </svg>
                    {lab.kapasitas}
                  </span>
                </div>
              </div>

              <div class="p-6 flex flex-col grow">
                <h3 class="text-xl font-bold text-white mb-2 group-hover:text-emerald-400 transition-colors leading-tight">
                  {lab.name}
                </h3>
                <p class="text-slate-400 text-sm mb-6 line-clamp-2">
                  {lab.deskripsi}
                </p>

                <div class="bg-slate-950 rounded-xl p-4 mb-4 border border-slate-800">
                  <div class="flex items-center gap-2 mb-3">
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      class="h-4 w-4 text-emerald-500"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"
                      />
                    </svg>
                    <p class="text-[10px] text-emerald-500 uppercase tracking-wider font-bold">
                      Hardware Specs
                    </p>
                  </div>
                  <ul class="space-y-2">
                    {lab.specs.map((spec) => (
                      <li class="flex items-start gap-2 text-xs text-slate-300">
                        <span class="text-slate-600 mt-0.5">â–¹</span>
                        {spec}
                      </li>
                    ))}
                  </ul>
                </div>

                <div class="mt-auto pt-2 flex flex-wrap gap-2">
                  {lab.software.map((soft) => (
                    <span class="px-2.5 py-1 text-[10px] bg-slate-800 text-slate-400 rounded-md border border-slate-700/50">
                      {soft}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-16 md:py-24 bg-slate-900/30 border-t border-slate-800">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-white mb-4">
          Ruang & Fasilitas Penunjang
        </h2>
        <p class="text-slate-400 max-w-2xl mx-auto">
          Lingkungan belajar yang kondusif dirancang untuk memicu kolaborasi dan
          kreativitas mahasiswa.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {
          facilities.map((item) => (
            <div class="p-6 bg-slate-950 border border-slate-800 rounded-2xl hover:bg-slate-900 hover:border-emerald-500/30 transition-all text-center group">
              <div class="w-14 h-14 mx-auto bg-slate-900 rounded-full flex items-center justify-center mb-5 group-hover:bg-emerald-500/20 group-hover:scale-110 transition-all duration-300 border border-slate-800 group-hover:border-emerald-500/50">
                <span class="text-xl font-bold text-emerald-500">
                  {item.icon}
                </span>
              </div>
              <h4 class="text-lg font-bold text-white mb-3 group-hover:text-emerald-400 transition-colors">
                {item.name}
              </h4>
              <p class="text-sm text-slate-400 leading-relaxed">{item.desc}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-12 border-t border-slate-800">
    <div class="container mx-auto px-6">
      <div
        class="bg-gradient-to-r from-emerald-900/20 to-slate-900 border border-emerald-500/20 rounded-2xl p-8 md:p-12 flex flex-col md:flex-row items-center justify-between gap-8 text-center md:text-left"
      >
        <div>
          <h3 class="text-2xl font-bold text-white mb-2">
            Jadwal & Peminjaman Lab
          </h3>
          <p class="text-slate-400 text-sm max-w-xl">
            Mahasiswa dapat meminjam laboratorium untuk kegiatan riset,
            pelatihan Himpunan, atau pengerjaan Skripsi di luar jam kuliah
            reguler.
          </p>
        </div>
        <div class="flex gap-4">
          <a
            href="#"
            class="px-6 py-3 bg-emerald-600 hover:bg-emerald-500 text-white font-bold rounded-lg transition-colors shadow-lg shadow-emerald-900/20 text-sm"
          >
            Cek Jadwal
          </a>
          <a
            href="#"
            class="px-6 py-3 border border-slate-600 hover:border-white text-slate-300 hover:text-white font-semibold rounded-lg transition-colors text-sm"
          >
            Unduh SOP
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>
